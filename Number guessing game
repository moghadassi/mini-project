<body>
    <div class="game-container">
        <h1>🎯 بازی حدس عدد</h1>
        
        <div class="game-info">
            <p>عددی بین <strong>1 تا 100</strong> در نظر گرفته‌ام.</p>
            <p>سعی کنید آن را حدس بزنید!</p>
        </div>

        <div class="stats">
            <div class="stat-item">
                <div class="stat-number" id="attempts">0</div>
                <div>تلاش‌ها</div>
            </div>
            <div class="stat-item">
                <div class="stat-number" id="best-score">-</div>
                <div>بهترین امتیاز</div>
            </div>
        </div>

        <div class="input-section">
            <input type="number" id="guessInput" min="1" max="100" placeholder="عدد خود را وارد کنید">
            <button onclick="makeGuess()">حدس بزن!</button>
        </div>

        <div id="message" class="message hidden"></div>

        <button onclick="newGame()" class="hidden" id="newGameBtn">بازی جدید</button>

        <div class="guess-history">
            <h3>تاریخچه حدس‌ها:</h3>
            <div id="guessHistory"></div>
        </div>
    </div>

    <script>
        let targetNumber;
        let attempts;
        let gameOver;
        let bestScore = localStorage.getItem('bestScore') || null;
        let guessHistory = [];

        // Initialize game
        function initGame() {
            targetNumber = Math.floor(Math.random() * 100) + 1;
            attempts = 0;
            gameOver = false;
            guessHistory = [];
            
            document.getElementById('attempts').textContent = attempts;
            document.getElementById('best-score').textContent = bestScore || '-';
            document.getElementById('message').className = 'message hidden';
            document.getElementById('newGameBtn').className = 'hidden';
            document.getElementById('guessHistory').innerHTML = '';
            document.getElementById('guessInput').value = '';
            document.getElementById('guessInput').focus();
        }

        function makeGuess() {
            if (gameOver) return;

            const guessInput = document.getElementById('guessInput');
            const guess = parseInt(guessInput.value);
            const messageDiv = document.getElementById('message');

            // Validate input
            if (isNaN(guess) || guess < 1 || guess > 100) {
                showMessage('لطفاً عددی بین 1 تا 100 وارد کنید!', 'error');
                return;
            }

            attempts++;
            guessHistory.push(guess);
            
            // Update attempts counter
            document.getElementById('attempts').textContent = attempts;
            
            // Update guess history
            updateGuessHistory();

            // Check the guess
            if (guess === targetNumber) {
                // Winner!
                showMessage(`🎉 آفرین! عدد ${targetNumber} را در ${attempts} تلاش حدس زدید!`, 'success');
                gameOver = true;
                
                // Update best score
                if (!bestScore || attempts < bestScore) {
                    bestScore = attempts;
                    localStorage.setItem('bestScore', bestScore);
                    document.getElementById('best-score').textContent = bestScore;
                    showMessage(`🏆 رکورد جدید! عدد ${targetNumber} را در ${attempts} تلاش حدس زدید!`, 'success');
                }
                
                document.getElementById('newGameBtn').className = '';
            } else if (guess < targetNumber) {
                showMessage(`📈 عدد شما کوچک است! عدد بزرگ‌تری امتحان کنید.`, 'warning');
            } else {
                showMessage(`📉 عدد شما بزرگ است! عدد کوچک‌تری امتحان کنید.`, 'warning');
            }

            // Clear input and focus
            guessInput.value = '';
            guessInput.focus();
        }

        function showMessage(text, type) {
            const messageDiv = document.getElementById('message');
            messageDiv.textContent = text;
            messageDiv.className = `message ${type}`;
        }

        function updateGuessHistory() {
            const historyDiv = document.getElementById('guessHistory');
            const lastGuess = guessHistory[guessHistory.length - 1];
            const guessItem = document.createElement('span');
            guessItem.className = 'guess-item';
            guessItem.textContent = lastGuess;
            historyDiv.appendChild(guessItem);
        }

        function newGame() {
            initGame();
        }

        // Handle Enter key press
        document.getElementById('guessInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                makeGuess();
            }
        });

        // Start the game
        initGame();
    </script>
</body>
</html>
